/* <!-- 头部区域 --> */
.searchContainer{
  padding: 0 20rpx;
}
.header{
  display: flex;
  height: 60rpx;
  line-height: 60rpx;
  padding: 10rpx;
}
.clear{
  position:absolute;
  right: 30rpx;
  top: 0;
  font-size: 24rpx;
  color: rgba(5, 5, 5, 0.5);
  z-index: 10;
}
.header  .cancel{
  width: 120rpx;
  text-align: center;
  color: rgba(5, 5, 5, 0.5);
  font-size: 34rpx;
}
.header .searchInput{
  position: relative;
  flex: 1;
  background-color: rgba(237, 237, 237, 0.3);
  border-radius: 30rpx;
}
.searchInput input{
  margin-left: 50rpx;
  height: 60rpx;
  font-size: 28rpx;
}
.searchIcon{
  position:absolute;
  left:15rpx
}
.placeholder{
  /* color: #d43c33; */
  font-size: 28rpx;
}
/* 热搜榜 */
.hotContainer .title{
  font-size: 28rpx;
  height: 80rpx;
  line-height: 80rpx;
  border-bottom: 1rpx solid #eee;
}
.hotList{
  display: flex;
  flex-wrap: wrap;
}
.hotList .hotItem{
  width: 50%;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 26rpx;
  font-weight: 800;
}
.hotItem .order{
  margin: 0 10rpx;
  max-width: 40%;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.hotItem  .iconImg{
  width: 35rpx;
  height: 20rpx;
  margin-left: 6rpx;
}
/* <!-- 搜索内容展示 --> */

.searchContent{
  color: #d43c33;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 24rpx;
  border-bottom: 1rpx solid #d43c33;
}
.searchItem{
  height: 80rpx;
  line-height: 80rpx;
  display: flex;
}
.content{

  flex: 1;
  margin-left: 50rpx;
  border-bottom: 1rpx solid #eee;
  font-size: 26rpx;

}
/* <!-- 搜索历史记录 --> */
.history{
  position: relative;
  display: flex;
  flex-wrap: wrap;
  margin: 20rpx 0;
}
.history .title{
  font-size: 28 rpx;
  height: 50rpx;
  line-height: 50rpx;
}
.history .historyItem{
  font-size: 26rpx;
  background-color: #ededed;
  margin-left: 20rpx;
  padding: 0 30rpx;
  border-radius: 20rpx;
  margin-bottom: 20rpx;
  height: 50rpx;
  line-height: 50rpx;
}
.history .delete{
position: absolute;
bottom: 0rpx;
right: 15rpx;
font-size: 36rpx;
}